@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @foreach (var product in Model.Products)
    {
        <div class="row mb-3">
            <div class="col-2">
                <img class="img-fluid" src="@product.ProductImagePath" />
            </div>
            <div class="col-10">
                <p class="fw-bold">@product.ProductName</p>
                <p>@product.Price</p>
                <p>@product.Manufacturer</p>
                <p>@product.ProductShortDescription</p>
            </div>
        </div>
    }
</div>